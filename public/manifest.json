{
  "name": "SlideTutor AI - Learning Platform",
  "short_name": "SlideTutor",
  "description": "Transform your learning experience with AI-powered lessons, quizzes, and flashcards",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#6366f1",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": ["education", "productivity"],
  "screenshots": [],
  "shortcuts": [
    {
      "name": "Upload Content",
      "short_name": "Upload",
      "description": "Upload new learning materials",
      "url": "/?tab=upload",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Take Quiz",
      "short_name": "Quiz",
      "description": "Start a practice quiz",
      "url": "/?tab=quiz",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Flashcards",
      "short_name": "Cards",
      "description": "Review flashcards",
      "url": "/?tab=flashcards",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/?tab=upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": ["application/pdf", "application/vnd.ms-powerpoint", "application/vnd.openxmlformats-officedocument.presentationml.presentation", "image/*"]
        }
      ]
    }
  }
}
